<Window x:Class="AJC_GestionQuestionnaires.App.Views.Questionnaire"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AJC_GestionQuestionnaires.App"
        xmlns:models="clr-namespace:AJC_GestionQuestionnaires.Data.Models;assembly=AJC_GestionQuestionnaires.Data"
        xmlns:viewmodels="clr-namespace:AJC_GestionQuestionnaires.App.ViewModels"
        d:DataContext="{d:DesignInstance Type=viewmodels:QuestionnaireViewModel}"
        mc:Ignorable="d"
        Title="Questionnaire Manager" Height="500" Width="800">

    <Window.Resources>
        <DataTemplate x:Key="QuestionItemTemplate">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Label VerticalAlignment="Center" Grid.Column="0" Content="{Binding Title}" />
                <Label VerticalAlignment="Center" Grid.Column="1" Content="{Binding Answer}" />
            </Grid>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        
        <Button Margin="0,5,0,0" Width="750" Grid.ColumnSpan="1" HorizontalAlignment="Center" Content="Add Empty Question"
                Command="{Binding AddCommand}"/>

        <GroupBox Grid.Row="1" Margin="0,10,0, 0">
            <Grid Margin="0,5,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBox Height="30" Text="Question" Grid.Column="0" />
                <GroupBox Grid.Column="0" Header="Questions">
                    <ListBox
                        x:Name="QuestionsListBox"
                        HorizontalAlignment="Stretch"
                        SelectedItem="{Binding SelectedQuestion}"
                        ItemsSource="{Binding Questions}"
                        ItemTemplate="{StaticResource QuestionItemTemplate}"
                        >
                    </ListBox>
                </GroupBox>

                <GroupBox Grid.Column="1" Header="Add/Modify Question">
                    <GroupItem VerticalAlignment="Stretch">
                        <StackPanel Grid.Row="0" VerticalAlignment="Top" Grid.RowSpan="3">
                            <Label Content="Question:" Grid.Column="1" />
                            <TextBox Height="30" Text="{Binding  SelectedQuestion.Title}" />

                            <Label Content="Possible Answers:" Grid.Column="1" />
                            <TextBox Margin="0,0,0,10" Height="30" Text="{Binding SelectedQuestion.Answer1}" />
                            <TextBox Margin="0,0,0,10" Height="30" Text="{Binding SelectedQuestion.Answer2}" />
                            <TextBox Margin="0,0,0,10" Height="30" Text="{Binding SelectedQuestion.Answer3}" />
                            <TextBox Height="30" Text="{Binding SelectedQuestion.Answer4}" />

                            <Label Content="Correct Answer:" />
                            <TextBox Height="30" Text="{Binding SelectedQuestion.Answer}" />
                            <Grid Margin="0,20,0,0" VerticalAlignment="Bottom" HorizontalAlignment="Stretch">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Button Grid.Column="0" HorizontalAlignment="Left" Margin="0,0,20,0" 
                                        Command="{Binding UpdateCommand}"
                                        CommandParameter="{Binding SelectedQuestion}">Modify Question</Button>
                                <Button Grid.Column="1" HorizontalAlignment="Right" 
                                        Command="{Binding DeleteCommand}"
                                        CommandParameter="{Binding SelectedQuestion}">Delete Question</Button>
                             </Grid>
                            </StackPanel>
                    </GroupItem>
                </GroupBox>


        </Grid>
    </GroupBox>
        
    </Grid>
</Window>
