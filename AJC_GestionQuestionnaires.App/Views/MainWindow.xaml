<Window x:Class="AJC_GestionQuestionnaires.App.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AJC_GestionQuestionnaires.App"
        mc:Ignorable="d"
        Title="Questionnaire Manager" Height="450" Width="800">
    <GroupBox>
        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>

                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Content="List of Questionnaires" />
                <ListBox Grid.Row="1">
            
                </ListBox>
                
            </Grid>

            <Button Grid.Row="1" Width="200" Margin="0,5,0,0" Height="30" Content="New Questionnaire" Click="NewQuestionnaireButton_Clicked" />
        </Grid>
    </GroupBox>
</Window>
